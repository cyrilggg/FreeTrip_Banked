<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.freetrip_banked.mapper.TourMapper">
    <select id="selectBlogByName" parameterType="String" resultType="com.example.freetrip_banked.bean.TourBean">
        SELECT *
        FROM blogs
        WHERE title = #{title};
    </select>

    <insert id="insertBlog" parameterType="com.example.freetrip_banked.bean.TourBean">
        INSERT INTO blogs(user_id, title, content, praise)
        VALUES (#{user_id}, #{title}, #{content}, 0);
    </insert>

    <update id="updatePraise" parameterType="com.example.freetrip_banked.bean.TourBean">
        UPDATE blogs
        SET praise = praise + 1,
        WHERE id = #{id};
    </update>

    <select id="getAllBlog" resultType="com.example.freetrip_banked.bean.TourBean">
        SELECT *
        FROM blogs;
    </select>
</mapper>