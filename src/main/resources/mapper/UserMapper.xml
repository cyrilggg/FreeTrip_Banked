<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.freetrip_banked.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.example.freetrip_banked.bean.User">
        insert into users(username, password)
        values(#{username}, #{password});
    </insert>

    <select id="loginUser" parameterType="String" resultType="com.example.freetrip_banked.bean.User">
        select *
        from users
        where username= #{username} and password= #{password};
    </select>

</mapper>